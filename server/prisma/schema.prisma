generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum NoteState {
  active
  trashed
  deleted
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  notes     Note[]
  tags      Tag[]
}

model Note {
  id         String    @id @default(uuid())
  title      String
  content    String?  
  isPinned   Boolean   @default(false)
  isArchived Boolean   @default(false)
  color      String?
  state      NoteState @default(active)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  tags       Tag[]
}

model Tag {
  id        String    @id @default(uuid())
  name      String
  color     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  notes     Note[]

  @@unique([userId, name])
}
